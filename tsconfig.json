{
  "extends": "@tsconfig/node18/tsconfig.json",
  "include": ["src/**/**/*"],
  "exclude": ["dist"],
  "compilerOptions": {
    "target": "ES6",
    "module": "CommonJS",
    "lib": ["ES6", "ES2015", "DOM"],
    "declaration": true,
    "outDir": "dist",
    "rootDir": "src",
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "moduleResolution": "Node",
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": true,
    "sourceMap": true
  }
}